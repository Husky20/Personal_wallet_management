{% extends 'base.html.twig' %}

    {% block title %}
        {{ name }}!
    {% endblock %}

    {% block body %}
        <p>
            {{ name }}!
        </p>
        {% if data is defined and data|length %}
            <table class="table table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>{{ 'label_id'|trans }}</th>
                    <th>{{ 'label_name'|trans }}</th>
                    <th scope="col">
                        {{ 'label_actions'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for item in data %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name|join(', ') }}</td>
                        <td>&nbsp;</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>
                {{ 'message_empty_list'|trans }}
            </p>
        {% endif %}
    {% endblock %}
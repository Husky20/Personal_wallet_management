{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_login'|trans }}
{% endblock %}

{% block body %}
    <form method="post">

        {% if app.user %}
            <div class="mb-3">
                {{ 'massage_log'|trans }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ 'massage_change_password'|trans }}</h1>
        <label for="inputPassword">{{'label_password'|trans}}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
        <label for="inputPasswordAgain">{{'label_password_again'|trans}}</label>
        <input type="password" name="passwordRepeated" id="inputPasswordAgain" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'action_change_password'|trans }}
        </button>
    </form>
{% endblock %}
